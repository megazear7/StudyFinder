<div class="row">
  <div class="pull-left">
    <h3><%= @title %></h3>
  </div>
  <div class="pull-right">
    <br/>
      <%= link_to "View All Buildings", buildings_path(all: 'true') %>
  </div>
</div>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>School</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.name, building %></td>
        <td><%= link_to building.school.name, building.school %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Building', new_building_path, :class =>"btn btn-default" %>
