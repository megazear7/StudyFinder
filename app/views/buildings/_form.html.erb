<%= form_for(@building) do |f| %>
  <% if @building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@building.errors.count, "error") %> prohibited this building from being saved:</h2>

      <ul>
      <% @building.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name, "Building Name" %><br/>
  <%= f.text_field :name %><br/><br/>

  <p>Add, Remove or Modify rooms at this building:</p>

  <%= f.fields_for :rooms do |builder | %>
    <%= render 'room_fields', :f => builder %>
  <% end %>

  <p><%= link_to_add_fields "Add Room", f, :rooms %></p>

  <%= f.submit %>

<% end %>
