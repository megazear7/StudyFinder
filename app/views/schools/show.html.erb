<h3>Buildings at <%= @school.name %></h3>

<div class="row">
  <div class="col-md-8">
    <br/>
    <%= form_tag school_path(@school), :method => 'get' do %>
      <div class="col-md-4">
        <%= text_field_tag :search, params[:search], class: "string form-control" %>
      </div>
        <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        <%= link_to "Reset", school_path(@school), :method => 'get', class: "btn btn-default" %>
    <% end %>
  </div>

  <div class="col-md-4">
    <%= will_paginate @buildings, renderer: BootstrapPagination::Rails, class: "pull-right" %>
  </div>
</div>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Building</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.name, building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @buildings, renderer: BootstrapPagination::Rails, class: "pull-right" %>

<br/>

<%= link_to 'Edit School', edit_school_path(@school) %> |
<%= link_to 'Back To School Listing', schools_path %>
