<h3>All Available Schools:</h3>

<div class="row">
  <div class="col-md-8">
    <br/>
    <%= form_tag schools_path, :method => 'get' do %>
      <div class="col-md-4">
        <%= text_field_tag :search, params[:search], class: "string form-control" %>
      </div>
        <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        <%= link_to "Reset", schools_path, :method => 'get', class: "btn btn-default" %>
    <% end %>
  </div>

  <div class="col-md-4">
    <%= will_paginate @schools, renderer: BootstrapPagination::Rails, class: "pull-right" %>
  </div>
</div>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>
 <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= link_to school.name, school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @schools, renderer: BootstrapPagination::Rails, class: "pull-right" %>

<br>

<%= link_to 'New School', new_school_path, :class =>"btn btn-primary" %>
