<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, :class => "string form-control" %>
  	</div>
  </div>
  <br/>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :password %><br />
      <%= f.password_field :password, :class => "string form-control" %>
  	</div>
  </div>
  <br/>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :class => "string form-control" %>
  	</div>
  </div>
  <br/>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :school %>
      <% school_array = School.all.map { |school| [school.name, school.id] } %>
      <%= f.select :school_id, options_for_select(school_array), {}, { :class => "select form-control" } %>
  	</div>
  </div>
  <br/>

  <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
  <br/>
<% end %>

<%= render "users/shared/links" %>
